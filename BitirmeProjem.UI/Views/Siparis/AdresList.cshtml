    <script type="text/javascript">
        $(document).ready(function () {
            $("#Id").change(function () {
                var id = $(this).val();
                var ilceList = $("#IlceId");
                ilceList.empty();
                $.ajax({
                    url: '/Siparis/IlceList',
                    type: 'POST',
                    datatype: 'json',
                    data: { 'id': id },
                    success: function (data) {
                        $.each(data, function (index, option) {
                            ilceList.append('<option value=' + option.Value + '>' + option.Text + '</option>')
                        });
                    }

                });
            });
        });
    </script>

