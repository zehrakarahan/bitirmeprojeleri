            window.location.replace("/Siparis/Sonuc/" + $("#adresbilgisi").val());
            
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#siparistamamla").click(function () {
               
               
                var baslik = $("#adresBasligi").val();
                var adres = $("#adresbilgisi").val();
               
              
                $.ajax({
                    url: '/Siparis/Deneme',
